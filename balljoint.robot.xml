<!-- demonstrates very simple spherical joint -->
<Robot name="arm">
  <!-- demonstrates very simple spherical joint -->
  <KinBody name="test">
    <body name="b0" type="dynamic">
      <geom type="box">
        <extents>1 0.2 0.2</extents>
      </geom>
    </body>
    <body name="b1" type="dynamic">
      <translation>2 0 0</translation>
      <geom type="box">
        <extents>1 0.1 0.1</extents>
      </geom>
    </body>
    <joint name="joint0" type="hinge2">
      <body>b0</body>
      <body>b1</body>
      <anchor>1 0 0</anchor>
      <axis1>0 0 -1</axis1>
      <axis2>0 -1 0</axis2>
    </joint>
  </KinBody>
</Robot>
