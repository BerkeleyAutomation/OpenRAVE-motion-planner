<Robot name="dvrk">
 <KinBody>
  <body name="center0" type="dynamic">
    <!-- <translation>-1 0 0</translation> -->
    <geom type="sphere">
      <radius>0.11</radius>
    </geom>
  </body>
  <body name="dummy" type="dynamic">
  </body>
  <body name="c0" type="dynamic">
    <!-- <translation>-1 0 0</translation> -->
    <geom type="cylinder">
      <rotationaxis>0 1 0 90</rotationaxis>
      <radius>0.1</radius>
      <height>2</height>
      <ambientColor>1. 0. 0.</ambientColor>
      <diffuseColor>1. 0. 0.</diffuseColor>
    </geom>
  </body>
  <body name="s0" type="dynamic">
    <translation>0 -1 0</translation>
    <geom type="cylinder">
      <rotationaxis>0 1 0 90</rotationaxis>
      <radius>0.05</radius>
      <height>2</height>
    </geom>
  </body>
  <joint name="joint0" type="hinge">
    <body>center0</body>
    <body>dummy</body>
    <initial>0.3925</initial>
    <anchor>0 0 0</anchor>
    <axis>0 0 1</axis>
  </joint>
  <joint name="joint1" type="hinge">
    <body>dummy</body>
    <body>c0</body>
    <initial>0.785</initial>
    <anchor>0 0 0</anchor>
    <axis>1 0 0</axis>
  </joint>
  <joint name="joint2" type="slider">
    <body>c0</body>
    <body>s0</body>
    <axis>0 -1 0</axis>
    <limits>-1 1</limits>
  </joint>
 </KinBody>

